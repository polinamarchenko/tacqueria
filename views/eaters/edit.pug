extends base.pug
block content
  form(action=`/eaters/${eater.id}?_method=PATCH`, method='POST')
    label(for='name') Name:
    input(type='text', name='eater[name]', id='name', value=eater.name)
    label(for='favoriteTopping') Favorite Topping: 
    input(type='text', name='eater[favoriteTopping]', id='favoriteTopping', value=eater.favoriteTopping)
    input(type='submit', value='Edit an eater')
      
  form(action=`/eaters/${eater.id}?_method=DELETE`, method='POST')
    input(type='submit', value='X')  
